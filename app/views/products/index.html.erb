<h1>Listing Products</h1>

<table>
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @products.each do |product| %>
  <tr>
    <td><%= product.name %></td>
    <td><%= link_to "Show", product_path(product) %></td>
    <td><%= link_to "Edit", edit_product_path(product) %></td>
    <td><%= link_to "Remove", product_path(product), method: :delete, :remote => true, data: { confirm: "Are you sure?" } %></td>
  </tr>
<% end %>
</table>

<br>

<%= link_to "New product", new_product_path %>

<p>controller_name :<%= controller_name %></p>


<%= form_tag("/products/search", method: "get") do %>
  <%= label_tag(:q, "Search for:") %>
  <%= text_field_tag(:q) %>
  <%= submit_tag("Search") %>
<% end %>
