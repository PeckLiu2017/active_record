<h1>index 页面</h1>

<h1>Listing People</h1>

<table>
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @people.each do |person| %>
  <tr>
    <td><%= person.name %></td>
    <td><%= raw person.updated_at %></td>
    <td><%= link_to "Show", person_path(person) %></td>
    <td><%= link_to "Edit", edit_person_path(person) %></td>
    <td><%= link_to "Remove", person_path(person), method: :delete, :remote => true, data: { confirm: "Are you sure?" } %></td>
  </tr>
<% end %>
</table>

